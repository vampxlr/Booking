    tjq(document).ready(function () {

        //Basic
        tjq('.example').darkTooltip({
            animation: 'flipIn',
            gravity: 'south',
            confirm: false,
            theme: 'light'
        });

        //With some options
        tjq('#light').darkTooltip({
            animation: 'flipIn',
            gravity: 'west',
            confirm: true,
            theme: 'light'
        });
    });

    
</script>
