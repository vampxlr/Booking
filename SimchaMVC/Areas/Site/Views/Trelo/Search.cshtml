     .listing-style3.flight .details .details-wrapper .time div.popover
      {
         border: 1px solid rgba(0, 0, 0, 0.2);
         padding-left: 0px;
     }
    .listing-style3.flight .details .details-wrapper .time div.popover
      div.arrow {
        padding-left: 0px;
    }
