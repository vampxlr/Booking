                        </div>
                        @foreach (var day in AllDates)
                        {
                            var dayString = day.Date.ToString("MM/dd/yyyy");
                            var timeslotCounter = 0;
                            int weekdayid;
                            switch (day.DayOfWeek.ToString())
                            {
                                case "Sunday":
                                    weekdayid = 1;
                                    break;
                                case "Monday":
                                    weekdayid = 2;
                                    break;
                                case "Tuesday":
                                    weekdayid = 3;
                                    break;
                                case "Wednesday":
