@model SimchaMVC.hashgacha_images


<div class="well">
    <table class="table">
        @using (Html.BeginForm("AddNewRecord", "Hashgachot", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <tbody>
                <tr>


                    <td><label class="field-title">Hashgacha Name:</label> </td>
                    <td>@Html.TextBoxFor(model => model.hashgacha_name, new { @class = "form-control" })</td>
                    <td>@Html.ValidationMessageFor(model => model.hashgacha_name)</td>
                </tr>
                <tr>
                    <td><label class="field-title">Upload New Image:</label> </td>
                    <td>@Html.TextBox("image", null, new { name = "file", type = "file", accept = "image/*"  }) &nbsp;&nbsp;&nbsp;</td>
                </tr>

                <tr><td valign="top"><label class="field-title">Notes:</label> </td><td>@Html.TextAreaFor(model => model.notes, new { @class="form-control" })</td></tr>
                <tr>
                    <td><label class="field-title">Display Order:</label> </td>
                    <td>@Html.TextBoxFor(model => model.order_by, new { @class="form-control" })</td>
                </tr>
                <tr>
                    <td></td>
                    <td><button type="submit" class="btn btn-default" onclick="document.getElementById('uploaddiv1').innerHTML='Please Wait...'">Upload</button></td>
                </tr>

            </tbody>
        }
    </table>
</div>

