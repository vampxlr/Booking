<script>

    $(document).ready(function () {
        var data = {
            StartDate: "1/2/2014",
            EndDate: "1/5/2014",
            Hall_Ids: [],
            ZipCode: null,
            ZipAprox: 50,
            LocationIds: [],
            SimchaTypeIds: [],
            Capacity: null
        };
        /*$.post("/api/webapi/GetBookingsWithStartDateAndEndDate", data).done(function (data) {
            console.log(data);

        });*/

    });

    $(document).ready(function () {
        function startChange() {
            var startDate = start.value(),
                endDate = end.value();

            if (startDate) {
                startDate = new Date(startDate);
                startDate.setDate(startDate.getDate());
                end.min(startDate);
            } else if (endDate) {
                start.max(new Date(endDate));
            } else {
                endDate = new Date();
                start.max(endDate);
                end.min(endDate);
            }
        }

        function endChange() {
            var endDate = end.value(),
                startDate = start.value();

            if (endDate) {
                endDate = new Date(endDate);
                endDate.setDate(endDate.getDate());
                start.max(endDate);
            } else if (startDate) {
                end.min(new Date(startDate));
            } else {
                endDate = new Date();
                start.max(endDate);
                end.min(endDate);
            }
        }

        var start = $("#start").kendoDatePicker({
            change: startChange
        }).data("kendoDatePicker");

        var end = $("#end").kendoDatePicker({
            change: endChange
        }).data("kendoDatePicker");

        start.max(end.value());
        end.min(start.value());
    });

    $(document).ready(function () {

        // default settings
        // $('.panel').slidePanel();

        // custom settings
        $('#halls').slidePanel({
            triggerName: '#trigger1',
            position: 'fixed',
            triggerTopPos: '200px',
            panelTopPos: '190px'
        });

        $('#location').slidePanel({
            triggerName: '#trigger2',
            position: 'fixed',
            triggerTopPos: '300px',
            panelTopPos: '290px'
        });

        $('#date').slidePanel({
            triggerName: '#trigger3',
            triggerTopPos: '400px',
            position: 'fixed',
            panelTopPos: '390px'
        });

        $('#eventType').slidePanel({
            triggerName: '#trigger4',
            triggerTopPos: '200px',
            position: 'fixed',
            panelTopPos: '190px'
        });

        $('#zipCode').slidePanel({
            triggerName: '#trigger6',
            triggerTopPos: '300px',
            position: 'fixed',
            panelTopPos: '290px'
        });

        $('#capacity').slidePanel({
            triggerName: '#trigger5',
            triggerTopPos: '400px',
            position: 'fixed',
            panelTopPos: '390px'
        });
    });



    function getFilterData() {
        var data = {
            StartDate: kendo.toString($("#start").data("kendoDatePicker").value(), "MM/dd/yyyy"),
            EndDate: kendo.toString($("#end").data("kendoDatePicker").value(), "MM/dd/yyyy"),
            Hall_Ids: $("#hall_id").data("kendoMultiSelect").value(),
            ZipCode: $("#zip_code").val(),
            ZipAprox: $("#ZipAprox").val(),
            LocationIds: $("#location_id").data("kendoMultiSelect").value(),
            SimchaTypeIds: $("#event_id").data("kendoMultiSelect").value(),
            Capacity: null
        };

        return data;
    }

    $(document).ready(function () {
        $("#grid").kendoGrid({
            dataSource: {
                transport: {
                    read: {
                        url: "/api/webapi/GetBookingsWithStartDateAndEndDate",
                        type: "POST",
                        dataType: "json",
                        data: getFilterData()
                    }
                }
            },
            sortable: false,
            pageable: {
                refresh: true,
                pageSizes: true,
                buttonCount: 5
            },
            rowTemplate: kendo.template($("#rowTemplate").html()),
            //altRowTemplate: kendo.template($("#altRowTemplate").html()),
            height: 550
        });

        $("#button-refresh").click(function () {
            var grid = $("#grid").data('kendoGrid');
            grid.dataSource.options.transport.read.data = getFilterData();
            grid.dataSource.read();
        });
    });

</script>

