<!DOCTYPE html>
<html>
<head>
    <!-- Standard Meta -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />

    <!-- Site Properities -->
    <title>Homepage Example - Semantic</title>
    <link href="~/Content/semanticui/semantic.css" rel="stylesheet" />

    <link href="~/Content/semanticui/otherpage.css" rel="stylesheet" />

    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.js"></script>

    <script src="~/Content/semanticui/semantic.js"></script>

    <script src="~/Content/semanticui/homepage.js"></script>
    
    <link href="~/Content/kendo/2014.1.318/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/kendo/2014.1.318/kendo.rtl.min.css" rel="stylesheet" />

    <link href="~/Content/kendo/2014.1.318/kendo.silver.min.css" rel="stylesheet" />


    <link href="~/Content/kendo/2014.1.318/kendo.dataviz.default.min.css" rel="stylesheet" />
    <link href="~/Content/kendo/2014.1.318/kendo.dataviz.bootstrap.min.css" rel="stylesheet" />


    <script src="~/Scripts/kendo/2014.1.318/kendo.all.min.js"></script>
    <script src="~/Scripts/kendo/2014.1.318/kendo.aspnetmvc.min.js"></script>

</head>

    <body id="home">
     
        <div class="ui inverted masthead segment">
            <div class="ui page grid">
                <div class="column">
                    <div class="ui inverted blue menu">
                        <div class="header item">Simcha Booking</div>
                        <div class="right menu">
                            <div class="ui mobile dropdown link item">
                                Menu
                                <i class="dropdown icon"></i>
                                <div class="menu">
                                    <a href="@Url.Action("index")" class="item">Home</a>
                                    <a href="@Url.Action("Register")" class="item">Register</a>
                                    <a href="@Url.Action("Login")" class="item">Login</a>
                                    <a href="@Url.Action("Search")" class="item">Search</a>
                                    <a href="@Url.Action("Book")" class="item">Book</a>
                                    <a href="@Url.Action("Contact")" class="item">Contact</a>
                                </div>
                            </div>

                            <a href="@Url.Action("index")" class="item">Home</a>
                            <div class="ui dropdown link item">
                                My Account
                                <i class="dropdown icon"></i>
                                <div class="menu">
                                    <a href="@Url.Action("Register")" class="item">Register</a>
                                    <a href="@Url.Action("Login")" class="item">Login</a>
                                </div>
                            </div>
                            <a href="@Url.Action("Search")" class="item">Search</a>
                            <a href="@Url.Action("Book")" class="item">Book</a>
                            <a href="@Url.Action("Contact")" class="item">Contact</a>
                            <div class="item">
                                <div class="ui icon input">
                                    <input type="text" placeholder="Search..." />
                                    <i class="search link icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        @RenderBody()
        <script type="text/javascript">
            $(document)
                    .ready(function () {
                        $(' .ui.dropdown')
                                .dropdown()
                            ;
                        $('.ui.menu .dropdown')
                                .dropdown({
                                    on: 'hover'
                                })
                            ;
                    })
                ;
        </script>
        <script type="text/javascript">
            $(document)
                    .ready(function () {
                        $('.ui.checkbox')
                                .checkbox()
                            ;
                    })
                ;
        </script>
    </body>



</html>
