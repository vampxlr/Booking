@using Kendo.Mvc.UI

@{
    ViewBag.Title = "Home";
    Layout = "~/Areas/Site/Views/Shared/_TreloView.cshtml";
}



<div class="page-title-container">
    <div class="container">
        <div class="page-title pull-left">
            <h2 class="entry-title"> @ViewBag.Title</h2>
        </div>
        <ul class="breadcrumbs pull-right">
            <li><a href="#">HOME</a></li>
            <li><a href="#">PAGES</a></li>
            <li class="active">@ViewBag.Title</li>
        </ul>
    </div>
</div>



<section id="content" class="image-bg1">
    <div class="container">
        <div class="row">
            <div id="main" class="col-sm-8 col-md-9">
                <div class="search-box-wrapper style1">
                    <div class="search-box">
                        <ul class="search-tabs clearfix">
                            <li class="active"><a href="#hotels-tab" data-toggle="tab"><i class="soap-icon-hotel"></i>Simple Simcha Search </a></li>
                            <li ><a href="#flights-tab" data-toggle="tab"><i class="soap-icon-plane-right takeoff-effect"></i>Advanced Simcha Search</a></li>

                        </ul>
                   

                        <div class="search-tab-content">
                          

                                <div class="tab-pane fade active in" id="hotels-tab">
                                @using (Html.BeginForm("Search", "Trelo"))
                                {

                                        <div class="title-container">
                                            <h2 class="search-title">Search and Book Simchas <em style="font-size: xx-small">[Simple]</em></h2>
                                            <p>We're bringing you a new level of comfort.</p>
                                            <i class="soap-icon-hotel"></i>
                                        </div>
                                        <div class="search-content">
                                            @*<h5 class="title">Where</h5>
                    <label>Your Destination</label>
                    <input type="text" class="input-text full-width" placeholder="enter a destination or hotel name" />
                    <hr>*@
                                            <h5 class="title">Range</h5>
                                            <div class="row">
                                                <div class="col-xs-6">
                                                    <label>Starting From</label>
                                                    <div class="datepicker-wrap">
                                                        <input name="startDate" type="text" class="input-text full-width" placeholder="mm/dd/yy" />
                                                    </div>
                                                </div>
                                                <div class="col-xs-6">
                                                    <label>Ending At</label>
                                                    <div class="datepicker-wrap">
                                                        <input name="endDate" type="text" class="input-text full-width" placeholder="mm/dd/yy" />
                                                    </div>
                                                </div>
                                            </div>
                                            <hr>
                                            <h5 class="title">Neiborhoods</h5>
                                            <div class="row">
                                                <div class="col-xs-12">
                                                    <label>Close to Areas</label>
                                                    @(Html.Kendo().MultiSelect()
                                                          .Name("AreaIds")
                                                          .DataTextField("service_area")
                                                          .DataValueField("id")
                                                          .Placeholder("Select Areas...")
                                                          .AutoBind(true)
                                                          .DataSource(source =>
                                                          {
                                                              source.Read(read =>
                                                              {
                                                                  read.Action("GetAreas", "Trelo");
                                                              })
                                                                  .ServerFiltering(true);
                                                          })
                                                          )
                                                </div>
                                            </div>
                                            <hr>
                                            <button type="submit" class="full-width uppercase">Proceed To Result</button>
                                        </div>
                                }
                                </div>
                           
                  

                        <div class="tab-pane fade " id="flights-tab">
                        @using (Html.BeginForm("Search", "Trelo"))
                        {

                                <div class="title-container">
                                    <h2 class="search-title">Search and Book Simchas <em style="font-size: xx-small">[Advanced]</em></h2>
                                    <p>We're bringing you a new level of comfort.</p>
                                    <i class="soap-icon-plane-right takeoff-effect"></i>
                                </div>
                                <div class="search-content">
                                    @*<h5 class="title">Where</h5>
                                <label>Your Destination</label>
                                <input type="text" class="input-text full-width" placeholder="enter a destination or hotel name" />
                                <hr>*@
                                    <h5 class="title">Range</h5>
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <label>Starting From</label>
                                            <div class="datepicker-wrap">
                                                <input name="startDate" type="text" class="input-text full-width" placeholder="mm/dd/yy" />
                                            </div>
                                        </div>
                                        <div class="col-xs-6">
                                            <label>Ending At</label>
                                            <div class="datepicker-wrap">
                                                <input name="endDate" type="text" class="input-text full-width" placeholder="mm/dd/yy" />
                                            </div>
                                        </div>
                                    </div>
                                    <hr>
                                    <h5 class="title">More Filters</h5>
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <label>Halls</label>
                                            @*<select id="halls" class="input-text full-width" placeholder="enter your hall names"></select>*@
                                            @(Html.Kendo().MultiSelect()
                                                  .Name("hallIds")
                                                  .DataTextField("hall_name")
                                                  .DataValueField("hall_id")
                                                  .Placeholder("Select Halls...")
                                                  .AutoBind(true)
                                                  .DataSource(source =>
                                                  {
                                                      source.Read(read =>
                                                      {
                                                          read.Action("GetHalls", "Trelo");
                                                      })
                                                          .ServerFiltering(true);
                                                  })
                                                  )
                                            @*<input type="text" class="input-text full-width" placeholder="enter your hall names" />*@
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <label>Close to Areas</label>
                                            @(Html.Kendo().MultiSelect()
                                                  .Name("areaIds")
                                                  .DataTextField("service_area")
                                                  .DataValueField("id")
                                                  .Placeholder("Select Areas...")
                                                  .AutoBind(true)
                                                  .DataSource(source =>
                                                  {
                                                      source.Read(read =>
                                                      {
                                                          read.Action("GetAreas", "Trelo");
                                                      })
                                                          .ServerFiltering(true);
                                                  })
                                                  )                                            </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <label>Event Types</label>
                                            @(Html.Kendo().MultiSelect()
                                                  .Name("eventIds")
                                                  .DataTextField("type_name")
                                                  .DataValueField("id")
                                                  .Placeholder("Select Events...")
                                                  .AutoBind(true)
                                                  .DataSource(source =>
                                                  {
                                                      source.Read(read =>
                                                      {
                                                          read.Action("GetEvents", "Trelo");
                                                      })
                                                          .ServerFiltering(true);
                                                  })
                                                  )                                               </div>
                                    </div>
                                    <hr>
                                    <button type="submit" class="full-width uppercase">Proceed To Result</button>
                                </div>
                        }
                        </div>
                   
                        </div>
                    </div>
                </div>
            </div>
            <div class="sidebar col-sm-4 col-md-3">
                <div class="travelo-box contact-box">
                    <h4>Need Booking Help?</h4>
                    <p>We would be more than happy to help you. Our team advisor are 24/7 at your service to help you.</p>
                    <address class="contact-details">
                        <span class="contact-phone"><i class="soap-icon-phone"></i> 1-800-123-HELLO</span>
                        <br>
                        <a class="contact-email" href="#">help@simcha.com</a>
                    </address>
                </div>
                <div class="travelo-box book-with-us-box">
                    <h4>Why Book with us?</h4>
                    <ul>
                        <li>
                            <i class="soap-icon-hotel-1 circle"></i>
                            <h5 class="title"><a href="#">135,00+ Halls</a></h5>
                            <p>Nunc cursus libero pur congue arut nimspnty.</p>
                        </li>
                        <li>
                            <i class="soap-icon-savings circle"></i>
                            <h5 class="title"><a href="#">Low Rates &amp; Savings</a></h5>
                            <p>Nunc cursus libero pur congue arut nimspnty.</p>
                        </li>
                        <li>
                            <i class="soap-icon-support circle"></i>
                            <h5 class="title"><a href="#">Excellent Support</a></h5>
                            <p>Nunc cursus libero pur congue arut nimspnty.</p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
