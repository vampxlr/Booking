@model SimchaMVC.caterer

@{
    ViewBag.Title = "Caterers";
    Layout = "~/Areas/Admin/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row well">
    <div class="col-md-6">
        <div class="bs-component">

            @using (Html.BeginForm("AddNewRecord", "Caterers", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary()
                @Html.AntiForgeryToken()

                <fieldset>
                    <legend>Add New Caterer</legend>

                    <div class="form-group">
                        @Html.Label("Caterer Name", new { @class = "col-lg-2 control-label" })
                        <div class="col-lg-10">
                            @Html.TextBoxFor(m => m.caterer_name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Description", new { @class = "col-lg-2 control-label" })
                        <div class="col-lg-10">
                            @Html.TextBoxFor(m => m.description, new { @class = "form-control" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <a href=@Url.Action("index") class="btn btn-default">Cancel</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
            }

        </div>

    </div>
</div>





<script>
    $(".active").removeClass("active");
    $("a:contains('@ViewBag.Title')").parents("li").addClass("active");

</script>